<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:enabled="false"
        android:defaultValue="true"
        android:key="refresh_switch"
        android:summary="自动刷新参数值"
        android:title="自动刷新" />

    <ListPreference
        android:defaultValue="-1"
        android:dependency="refresh_switch"
        android:entries="@array/pref_sync_frequency_titles"
        android:entryValues="@array/pref_sync_frequency_values"
        android:key="refresh_rate"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="刷新频率" />

    <SwitchPreference
        android:enabled="false"
        android:defaultValue="false"
        android:key="client_switch"
        android:summary="客户端模式"
        android:title="客户端服务端模式" />


    <EditTextPreference
        android:dependency="client_switch"
        android:id="@+id/setting_edit_ip"
        android:capitalize="words"
        android:defaultValue="192.168.0.1"
        android:inputType="textCapWords"
        android:key="text_ip"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="TCP IP" />

    <EditTextPreference
        android:id="@+id/setting_edit_port"
        android:defaultValue="8000"
        android:inputType="number"
        android:key="text_port"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="TCP 端口" />


</PreferenceScreen>
